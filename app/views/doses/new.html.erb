<h1>Add a dose to <%= @cocktail.name %></h1>
<%= simple_form_for [@cocktail, @dose] do |f| %>
  <%= f.input :description %>
  <%= f.input :ingredient, collection: Ingredient.all %>
  <%= f.submit "add a dose", class: "btn btn-primary" %>
<% end %>
<%= link_to '<i class="fa fa-undo" aria-hidden="true"></i> Back'.html_safe, cocktail_path(@cocktail), class: "btn" %>
